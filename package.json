{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.3",
    "socket.io-client": "^2.3.1"
  },
  "devDependencies": {
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-router-dom": "^5.1.6",
    "@types/socket.io-client": "^1.4.34",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "prettier": "^2.1.1",
    "typescript": "~3.7.2"
  },
  "scripts": {
    "start": "DEBUG=socket.io:client* react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "typecheck": "tsc",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx src",
    "lint:fix": "eslint --ext .js,.ts,.jsx,.tsx src --fix",
    "format": "prettier --check \"src/**/*.{js,ts,jsx,tsx,scss}\"",
    "format:fix": "prettier --write \"src/**/*.{js,ts,jsx,tsx,scss}\"",
    "check": "yarn run typecheck && yarn run lint && yarn run format",
    "fix": "yarn run lint:fix && yarn run format:fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn run check"
    }
  }
}
